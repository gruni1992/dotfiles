# Move between Windows
cmd + ctrl + shift - left: yabai -m window --focus west || yabai -m display --focus west
cmd + ctrl + shift - right: yabai -m window --focus east || yabai -m display --focus east
cmd + ctrl + shift - up: yabai -m window --focus north  || yabai -m display --focus north
cmd + ctrl + shift - down: yabai -m window --focus south || yabai -m display --focus south

# Move windows
meh - left: sh -c 'yabai -m window --swap west || { yabai -m window --display west; yabai -m display --focus west; }'
meh - right: sh -c 'yabai -m window --swap east || { yabai -m window --display east; yabai -m display --focus east; }'
meh - up: yabai -m window --swap north
meh - down: yabai -m window --swap south
hyper - left:  yabai -m window --display west; yabai -m display --focus west; 
hyper - right:  yabai -m window --display east; yabai -m display --focus east; 


# Move window to display
meh - z: yabai -m window --display 1 --focus
meh - x: yabai -m window --display 2 --focus
meh - d: yabai -m window --display 3 --focus

# rezise
meh - r: yabai -m window --resize right:-20:0
meh - t: yabai -m window --resize right:20:0

# float
cmd + ctrl + shift - f: yabai -m window --toggle float

# maximize a window
shift + cmd - m: yabai -m window --toggle zoom-fullscreen

# balance tree of windows
cmd + ctrl + shift - a: yabai -m space --balance
